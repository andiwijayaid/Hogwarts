<resources>
    <!-- Base application theme. -->
    <style name="Theme.Hogwarts"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/sofia_pro</item>
    </style>

    <style name="PageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/page_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/page_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/page_title_margin_top</item>
    </style>

    <style name="HouseButton">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:elevation">@dimen/houses_button_elevation</item>
        <item name="android:padding">@dimen/houses_button_padding</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>